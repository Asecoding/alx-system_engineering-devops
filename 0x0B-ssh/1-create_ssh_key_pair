#!/usr/bin/env bash

# Script to generate a 4096-bit RSA key pair named 'school' with passphrase 'betty'

KEY_NAME="school"
PASSPHRASE="betty"

echo "ğŸ” Generating RSA key pair..."
ssh-keygen -t rsa -b 4096 -f "$KEY_NAME" -N "$PASSPHRASE"

echo "âœ… Key pair created:"
echo " - Private key: $KEY_NAME"
echo " - Public key : ${KEY_NAME}.pub"

